<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/txtIMG"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="50dp"
            android:layout_height="23dp"
            android:layout_alignBaseline="@+id/txtCategoria"
            android:layout_alignBottom="@+id/txtCategoria"
            android:layout_toLeftOf="@+id/txtCategoria"
            android:layout_toStartOf="@+id/txtCategoria"
            android:text="Nome:"
            android:textAlignment="viewEnd"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="50dp"
            android:layout_height="23dp"
            android:layout_alignBottom="@+id/txtIMG"
            android:layout_toLeftOf="@+id/txtCategoria"
            android:layout_toRightOf="@+id/txtIMG"
            android:layout_toStartOf="@+id/txtCategoria"
            android:text="Valor:"
            android:textAlignment="viewEnd"
            android:textColor="@color/black"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtCategoria"
            android:layout_width="260dp"
            android:layout_height="23dp"
            android:layout_above="@+id/txtValorTransacao"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:text="Nome"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtValorTransacao"
            android:layout_width="260dp"
            android:layout_height="23dp"
            android:layout_alignBottom="@+id/txtIMG"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:text="Valor: R$"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textStyle="bold" />
    </LinearLayout>


</LinearLayout>
